<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/grey_dark</item>
        <item name="colorOnPrimary">@color/grey_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/purple_dark</item>
        <item name="colorOnSecondary">@color/purple_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ThemeOverlay.Toobar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- Text color -->
        <item name="android:editTextColor">@color/white</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Field">
        <item name="android:textColorHint">@color/grey_light</item>
        <item name="startIconTint">@color/grey_light</item>
        <item name="endIconTint">@color/grey_light</item>
        <item name="helperTextTextColor">@color/white</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/grey_light</item>
        <item name="hintTextColor">@color/grey_light</item>
    </style>

    <style name="Button">
        <item name="android:padding">@dimen/margin_vertical</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>