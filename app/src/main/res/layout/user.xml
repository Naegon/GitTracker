<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_radius"
        app:cardElevation="1dp"
        app:contentPaddingTop="@dimen/padding_vertical"
        app:contentPaddingBottom="@dimen/padding_vertical"
        app:contentPaddingLeft="@dimen/padding_horizontal"
        app:contentPaddingRight="@dimen/padding_horizontal"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal_double">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/left_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" >

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    app:srcCompat="@drawable/git_avatar"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    android:layout_gravity="center"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/follow" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_username"
                android:textSize="@dimen/text_big"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/left_layout"
                app:layout_constraintRight_toLeftOf="@id/img_learn_more"
                android:text="Username"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_marginStart="@dimen/margin_horizontal"
                android:drawableStart="@drawable/ic_company"
                android:drawablePadding="@dimen/padding_horizontal"
                app:layout_constraintTop_toBottomOf="@id/text_view_username"
                app:layout_constraintLeft_toRightOf="@id/left_layout"
                android:text="Company"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_repositories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal"
                android:drawableStart="@drawable/ic_repository"
                android:drawablePadding="@dimen/padding_horizontal"
                app:layout_constraintBottom_toTopOf="@id/text_view_followers"
                app:layout_constraintLeft_toRightOf="@id/left_layout"
                android:text="XX repository(ies)"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal"
                android:drawableStart="@drawable/ic_followers"
                android:drawablePadding="@dimen/padding_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/left_layout"
                android:text="XX follower(s)"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_learn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_information"
                app:tint="@color/purple"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>